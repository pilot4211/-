using System;
internal class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Сколько у вас золата");                           
        int gold = Convert.ToInt32(Console.ReadLine());

        Console.WriteLine("Сколько кристаллов вы хотите купить");        
        int purchaserequest = Convert.ToInt32(Console.ReadLine());

        int itemprice = 10;

        int bagWithCrystals = purchaserequest;       

        gold = gold - (itemprice * purchaserequest);

        Console.WriteLine($"Кристаллы = {bagWithCrystals} \nОстаток золото = {gold}");
    }
}
